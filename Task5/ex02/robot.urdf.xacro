<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="dog">

  <!-- === Материалы === -->
  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <!-- === Константы === -->
  <xacro:property name="body_length" value="0.8"/>
  <xacro:property name="body_radius" value="0.15"/>
  <xacro:property name="leg_mass" value="1.0"/>
  <xacro:property name="leg_size" value="0.12 0.1 0.35"/>
  <xacro:property name="wheel_radius" value="0.05"/>
  <xacro:property name="wheel_length" value="0.03"/>
  <xacro:property name="tail_length" value="0.4"/>
  <xacro:property name="tail_radius" value="0.02"/>

  <link name="base_link"/>

  <joint name="base_to_body" type="fixed">
    <parent link="base_link"/>
    <child link="body"/>
    <origin xyz="0 0 0"/>
  </joint>

  <!-- === Тело === -->
  <link name="body">
    <visual>
      <geometry>
        <cylinder length="${body_length}" radius="${body_radius}"/>
      </geometry>
      <origin rpy="0 1.5708 0" xyz="0 0 0.25"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="${body_length}" radius="${body_radius}"/>
      </geometry>
      <origin rpy="0 1.5708 0" xyz="0 0 0.25"/>
    </collision>
    <inertial>
      <mass value="8"/>
      <inertia ixx="0.5" ixy="0.0" ixz="0.0" iyy="0.5" iyz="0.0" izz="0.5"/>
    </inertial>
  </link>

  <!-- === Голова === -->
  <link name="head">
    <visual>
      <geometry>
        <sphere radius="0.12"/>
      </geometry>
      <origin xyz="0 0 0"/>
      <material name="white"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.12"/>
      </geometry>
      <origin xyz="0 0 0.06"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.02" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.02"/>
    </inertial>
  </link>

  <joint name="neck_joint" type="revolute">
    <parent link="body"/>
    <child link="head"/>
    <origin xyz="0.3 0 0.5"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="1.0" velocity="1.0"/>
  </joint>

  <link name="nose">
    <visual>
      <geometry>
        <box size="0.03 0.03 0.03"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="tonose" type="fixed">
    <parent link="head"/>
    <child link="nose"/>
    <origin xyz="0.12 0 0"/>
  </joint>

  <!-- === Макрос для ноги с колесом === -->
  <xacro:macro name="leg_wheel" params="prefix x y z">
    <link name="${prefix}_leg">
      <visual>
        <geometry><box size="${leg_size}"/></geometry>
        <origin xyz="0 0 -0.17"/>
        <material name="white"/>
      </visual>
      <collision>
        <geometry><box size="${leg_size}"/></geometry>
        <origin xyz="0 0 -0.17"/>
      </collision>
      <inertial>
        <mass value="${leg_mass}"/>
        <inertia ixx="0.03" ixy="0.0" ixz="0.0" iyy="0.03" iyz="0.0" izz="0.03"/>
      </inertial>
    </link>

    <joint name="${prefix}_leg_joint" type="revolute">
      <parent link="body"/>
      <child link="${prefix}_leg"/>
      <origin xyz="${x} ${y} ${z}"/>
      <axis xyz="0 1 0"/>
      <limit lower="-1.0" upper="1.0" effort="5" velocity="1"/>
    </joint>

    <link name="${prefix}_wheel">
      <visual>
        <origin rpy="1.5708 0 0" xyz="0 0 0"/>
        <geometry><cylinder radius="${wheel_radius}" length="${wheel_length}"/></geometry>
        <material name="black"/>
      </visual>
      <collision>
        <origin rpy="1.5708 0 0" xyz="0 0 0"/>
        <geometry><cylinder radius="${wheel_radius}" length="${wheel_length}"/></geometry>
      </collision>
      <inertial>
        <mass value="0.2"/>
        <inertia ixx="0.005" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.005"/>
      </inertial>
    </link>

    <joint name="${prefix}_wheel_joint" type="continuous">
      <parent link="${prefix}_leg"/>
      <child link="${prefix}_wheel"/>
      <origin xyz="0 0 -0.35"/>
      <axis xyz="0 1 0"/>
    </joint>
  </xacro:macro>

  <!-- === Ноги и колеса === -->
  <xacro:leg_wheel prefix="front_left" x="0.3" y="0.1" z="0.2"/>
  <xacro:leg_wheel prefix="front_right" x="0.3" y="-0.1" z="0.2"/>
  <xacro:leg_wheel prefix="rear_left" x="-0.3" y="0.1" z="0.2"/>
  <xacro:leg_wheel prefix="rear_right" x="-0.3" y="-0.1" z="0.2"/>

  <!-- === Хвост === -->
  <link name="tail">
    <visual>
      <geometry>
        <cylinder length="${tail_length}" radius="${tail_radius}"/>
      </geometry>
      <origin rpy="0 1.8 0" xyz="-0.2 0 0"/>
      <material name="white"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="${tail_length}" radius="${tail_radius}"/>
      </geometry>
      <origin rpy="0 1.8 0" xyz="-0.2 0 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="tail_joint" type="revolute">
    <parent link="body"/>
    <child link="tail"/>
    <origin xyz="-0.4 0 0.4"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.8" upper="0.8" effort="2.0" velocity="2.0"/>
  </joint>

</robot>
